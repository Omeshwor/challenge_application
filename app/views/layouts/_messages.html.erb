<div class="row">
  <div class="col-sm-12 col-sm-offset-3">
    <% flash.each do |name, msg| %>
      <% if "#{name}"=="alert" %> 
        <% name = "danger"%>
      <% else %>
        <% name = "success" %>
      <% end %>
      <div class='alert alert-<%= "#{name}" %>' role="alert">
        <a href="#" class="close" data-dismiss="alert">x</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      </div>
    <% end %>
  </div>
</div>
