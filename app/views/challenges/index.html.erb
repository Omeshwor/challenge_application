<h1 align="center">Showing all challenges</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Creator</th>
        <th>Title</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @challenges.each do |challenge| %>
        <tr>
          <td><%= challenge.user_id %></td>
          <td><%= challenge.title %></td>
          <td><%= link_to 'Show', challenge, class:"btn-sm btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Challenge', new_challenge_path %>
