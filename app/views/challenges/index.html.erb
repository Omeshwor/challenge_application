<div class="container">
  <h1 align="center">Showing all challenges</h1>
</div>

<div class="table-responsive">
  <table class="table table-hover">
  <div class="d-flex justify-content-center">
    <%= link_to 'Add New Challenge', new_challenge_path, class:"btn-sm btn-primary justify-content-center" %>
  </div>
    <thead>
      <tr>
        <th>Creator</th>
        <th>Title</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @challenges.each do |challenge| %>
        <tr>
          <td><%= challenge.user_id %></td>
          <td><%= challenge.title %></td>
          <td><%= link_to 'Show', challenge, class:"btn-sm btn-info" %></td>
          <td><% if challenge.user == current_user %>
            <%= link_to "Edit", challenge_path(challenge), class:"btn-sm btn-primary" %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

