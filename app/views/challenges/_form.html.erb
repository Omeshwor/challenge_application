<%= form_with(model: challenge, local: true) do |form| %>
  <% if challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
        <% challenge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div class="field">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>
  <div class="field">
    <%= form.label :goal %>
    <%= form.number_field :goal, in: 1.00..999.00, step: 0.1 %>
  </div>
  <div class="field">
    <%= form.label :active %>
    <%= form.select(:active, [[true], [false]])%>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
