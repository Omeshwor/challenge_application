 <div class="table-responsive">
  <table class="table table-hover">
   <thead>
      <tr>
        <th>Entry Date Time</th>
        <th>Entry</th>
        <th>Actions</th>
      </tr>
    </thead>
   <tbody>
      <% @competitor_details.each do |details| %>
        <tr>
          <td><%= details.created_at %></td>
          <td><%= details.detail %></td>
          <td><%= link_to 'Show', details, class:"btn-sm btn-info" %></td>
          <td>
          <% if details.competitor.user_id == current_user %>
            <%= link_to "Edit", edit_user_challenge_details_path(details), class:"btn-sm btn-primary" %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>  
  </table>
</div>